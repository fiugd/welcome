<div id="site" display="grid" position="absolute" left="0" right="0" top="0" bottom="0" grid-template-columns="190px 1fr" grid-template-rows="60px 1fr">
    <div id="topBar" color="var(--app-bar-text-color)" background="var(--app-bar-bg)" grid-column-start="1" grid-column-end="3" grid-row-start="1" grid-row-end="1">
        <Container path="AppBar"/>
    </div>

    <div id="sideBar" background="var(--menu-bg)" grid-column-start="1" grid-column-end="1" grid-row-start="2" grid-row-end="2">
        <Container path="SideBar"/>
    </div>

    <div id="main" background="var(--main-bg)" grid-column-start="2" grid-column-end="2" grid-row-start="2" grid-row-end="2" overflow-x="hidden" overflow-y="auto">
        <Container listen="route" class="flex justifyCenter alignCenter" />
    </div>
</div>
